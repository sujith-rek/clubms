generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               Int                @id @default(autoincrement())
  email            String             @unique
  password         String
  name             String
  description      String             @default("")
  rollNo           String             @default("")
  role             Role               @default(STUDENT)
  Budget           ClubBudget[]
  events           Event[]
  Eventapproval    Eventapproval[]
  RoomBookApproval RoomBookApproval[]
}

model ClubBudget {
  id             Int              @id @default(autoincrement())
  clubId         Int              @default(1) @unique
  allocated      Int
  spent          Int              @default(0)
  remaining      Int              @default(0)
  userId         Int?
  BudgetApproval BudgetApproval[]
  User           User?            @relation(fields: [userId], references: [id])
}

model Event {
  id            Int            @id @default(autoincrement())
  name          String
  description   String
  date          DateTime
  venue         String
  clubId        Int
  userId        Int?
  User          User?          @relation(fields: [userId], references: [id])
  Eventapproval Eventapproval?
}

model Eventapproval {
  id          Int    @id @default(autoincrement())
  eventId     Int    @unique
  adminId     Int    @default(1)
  adminStatus Status @default(PENDING)
  ccId        Int    @default(1)
  ccStatus    Status @default(PENDING)
  userId      Int?
  event       Event  @relation(fields: [eventId], references: [id])
  User        User?  @relation(fields: [userId], references: [id])
}

model RoomBookApproval {
  id          Int      @id @default(autoincrement())
  roomId      Int      @default(1)
  adminId     Int      @default(1)
  from        DateTime
  to          DateTime
  adminStatus Status   @default(PENDING)
  clubId      Int      @default(1)
  description String
  userId      Int?
  room        Room     @relation(fields: [roomId], references: [id])
  User        User?    @relation(fields: [userId], references: [id])
}

model BudgetApproval {
  id           Int        @id @default(autoincrement())
  adminId      Int        @default(1)
  adminStatus  Status     @default(PENDING)
  clubId       Int        @default(1)
  amount       Int
  description  String
  attachment   String
  requestDate  DateTime  @default(now())
  approvedDate DateTime?
  budget       ClubBudget @relation(fields: [clubId], references: [clubId])
}

model Room {
  id               Int                @id @default(autoincrement())
  capacity         Int
  roomNumber       Int
  roomBlock        Block
  roomBookApproval RoomBookApproval[]
}

enum Role {
  ADMIN
  STUDENT
  CLUB
  CC
}

enum Status {
  APPROVED
  PENDING
  REJECTED
}

enum Block {
  A_BLOCK
  B_BLOCK
  C_BLOCK
  D_BLOCK
}
